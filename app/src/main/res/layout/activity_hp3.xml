<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apple1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="167dp"
        android:layout_height="80dp"
        android:text="Hp Essentials"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="243dp"
        android:layout_height="85dp"
        android:layout_marginBottom="300dp"
        android:text="12th Gen Intel® Evo™ Powered by Core™ i5 Processor
Windows 11 Home
33.8 cm (13.3) diagonal WUXGA touchscreen display with Intel® Iris® Xᵉ Graphics
16 GB LPDDR4x-4266 RAM
512 GB SSD Hard drive
Backlit Keyboard, True Vision 5MP IR camera, B/O Speakers"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.075" />

    <Button
        android:id="@+id/buttonhp"
        android:layout_width="206dp"
        android:layout_height="55dp"
        android:layout_marginBottom="116dp"
        android:onClick="Buttonhp3"
        android:text="View Details"

        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonhp3youtube"
        android:layout_width="206dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:onClick="Buttonhp3youtube"
        android:text="Review youtube link"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="296dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="140dp"
        android:text="33.8 cm (13.3) diagonal WUXGA display"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonhp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.254" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="237dp"
        android:layout_height="121dp"
        android:layout_marginTop="28dp"
        android:text="16 GB memory; 512 GB SSD storage"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonhp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>